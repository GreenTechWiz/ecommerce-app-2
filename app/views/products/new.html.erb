<h1>Create new product</h1>

<%= form_tag("/products", method: :post) do %>
  <%= label_tag(:name, "Enter product's name:") %>
  <br>
  <%= text_field_tag(:name) %>
  <br>
  <%= label_tag(:category_id, "Select a Product Category:") %>
  <br>
  <%= select_tag(:category_id, options_from_collection_for_select(@categories, :id, :name), prompt: "Select Product Category") %>
  <br>
  <%= label_tag(:description, "Enter product's description:") %>
  <br>
  <%= text_area_tag(:description, nil, size: "40x10") %>
  <br>
  <%= label_tag(:image_url, "Enter a URL to your product's image:") %>
  <br>
  <%= text_field_tag(:image_url) %>
  <br>
  <%= label_tag(:price, "Enter product price:") %>
  <br>
  <%= number_field_tag(:price) %>
  <br>
  <%= submit_tag("Create product!") %>
<% end %>